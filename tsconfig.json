{
  "compilerOptions": {
    "target": "ESNext", // Or "ES2020", "ES2021", etc. depending on your target environment
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext", // Or "ES2020"
    "moduleResolution": "bundler", // <-- CRITICAL: Use "bundler" or "node" for modern setups
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // <-- CRITICAL: Ensure this is set for React 17+ JSX transform
    "baseUrl": "./src",
    "paths": {
      // If you have path aliases, define them here, e.g.:
      // "@/*": ["src/*"]
    }
  },
}